# API Configuration (Production)
VITE_API_BASE_URL=https://api.smartplugai.com
VITE_WEBSOCKET_URL=wss://ws.smartplugai.com
VITE_MQTT_BROKER_URL=wss://mqtt.smartplugai.com:9001

# Mock Mode (Development)
VITE_ENABLE_MOCK_DATA=true

# Authentication Provider
VITE_AUTH_PROVIDER=auth0
# OR: VITE_AUTH_PROVIDER=firebase

# Auth0 Configuration
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://api.smartplugai.com

# Firebase Configuration (Alternative)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_APP_ID=your-app-id

# Security
VITE_TLS_ENABLED=true
VITE_CERTIFICATE_PINNING=true

# Features
VITE_ENABLE_2FA=true
VITE_ENABLE_AUDIT_LOG=true
